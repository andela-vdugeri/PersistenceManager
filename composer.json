{
  "name": "verem/persitencemanager",
  "description": "A simple orm for lightweight applications",
  "license": "MIT",
  "keywords": [
    "orm", "database", "persistence", "sql", "php"
  ],
  "authors": [
    {
      "name": "Verem Dugeri",
      "email": "danverem@gmail.com"
    }
  ],

  "require":{
    "php": ">=5.5.1",
    "vlucas/phpdotenv": "^2.0"
  },

  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "mockery/mockery": "dev-master"
  },

  "autoload": {
    "classmap":[
      "src/"
    ],
    
    "psr-4": {
      "Verem\\persistence\\": "src/",
      "Verem\\Persistence\\Base\\": "src/Base"
    }
  },

  "autoload-dev":{
    "classmap": [
      "tests/"
    ],

    "psr-4": {
      "Verem\\Persistence\\Test\\": "tests/"
    }
  }
  "repositories": [
    {
        "type": "vcs",
        "url": "https://github.com/andela-vdugeri/PersistenceManager"
    }
],
}
